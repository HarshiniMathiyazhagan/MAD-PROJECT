<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cosmeticappuiux">

    <!-- Camera Permissions -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera" android:required="true"/>

    <!-- Application Configuration -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CosmeticAppUiux"
        tools:targetApi="31">

        <!-- Defined Activities -->
        <activity
            android:name=".DrySkinResultPage"
            android:exported="false" />
        <activity
            android:name=".CombinationSkinResultPage"
            android:exported="false" />
        <activity
            android:name=".NormalSkinResultPage"
            android:exported="false" />
        <activity
            android:name=".MoreInfo"
            android:exported="false" />
        <activity
            android:name=".Recomendations"
            android:exported="false"
            android:label="@string/title_activity_recomendations"
            android:theme="@style/Theme.CosmeticAppUiux.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Question5Activity"
            android:exported="false" />
        <activity
            android:name=".Question4Activity"
            android:exported="false" />
        <activity
            android:name=".Question3Activity"
            android:exported="false" />
        <activity
            android:name=".Question2Activity"
            android:exported="false" />
        <activity
            android:name=".Question1Activity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".OilySkinResultPage"
            android:exported="false" />

        <!-- Camera Activity (if needed for your camera implementation) -->


    </application>

</manifest>


